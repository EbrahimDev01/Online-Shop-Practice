@model IAsyncEnumerable<PreviewAdminProductViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>
                    @DisplayNames.Image
                </label>
            </th>
            <th>
                @DisplayNames.Title
            </th>
            <th>
                @DisplayNames.Price
            </th>
            <th>
                @DisplayNames.QuantityInStok
            </th>
            <th>
                @DisplayNames.CreateDateTimePersian
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @await foreach (var item in Model)
        {


            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="90" />
                    }
                    else
                    {
                        <span>
                            تصویری ثبت نشده
                        </span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantityInStok)
                </td>
                <td>
                    <time datetime="@item.CreateDateTime">
                        @item.CreateDateTimePersian
                    </time>
                </td>
                <td>
                    <a class="btn btn-info"
                       asp-action="Details"
                       asp-route-id="@item.Id">
                        جزئیات
                    </a> |

                    <a class="btn btn-warning"
                       asp-action="Edit"
                       asp-route-id="@item.Id">
                        ویرایش
                    </a> |

                    <a class="btn btn-danger"
                       asp-action="Delete"
                       asp-route-id="@item.Id">
                        حذف
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
